<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv3"
        style="@style/NormalTextStyle2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75dp"
        android:drawableLeft="@drawable/ic_assignment_black_24dp_2"
        android:drawablePadding="@dimen/_20dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:text="帮助" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/action_bar_tittle_color_555555" />

    <TextView
        android:id="@+id/tv0"
        style="@style/NormalTextStyle2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75dp"
        android:drawableLeft="@drawable/ic_assignment_black_24dp_2"
        android:drawablePadding="@dimen/_20dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:text="认证" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/action_bar_tittle_color_555555" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75dp">

        <TextView
            android:id="@+id/tv2"
            style="@style/NormalTextStyle2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75dp"
            android:drawableLeft="@drawable/ic_notifications_none_black_24dp"
            android:drawablePadding="@dimen/_20dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:text="消息" />

        <View
            android:id="@+id/new_msg_view"
            android:layout_width="@dimen/_10dp"
            android:layout_height="@dimen/_10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_100dp"
            android:background="@drawable/msg"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/action_bar_tittle_color_555555" />

    <TextView
        android:id="@+id/tv4"
        style="@style/NormalTextStyle2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75dp"
        android:drawableLeft="@drawable/ic_assignment_black_24dp_2"
        android:drawablePadding="@dimen/_20dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:text="联系我们" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/action_bar_tittle_color_555555" />

    <TextView
        android:id="@+id/tv1"
        style="@style/NormalTextStyle2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75dp"
        android:drawableLeft="@drawable/ic_directions_walk_black_24dp"
        android:drawablePadding="@dimen/_20dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:text="退出" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:background="@color/action_bar_tittle_color_555555" />

</LinearLayout>
